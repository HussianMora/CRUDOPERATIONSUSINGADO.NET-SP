<script>

    $("#Country").change(function () {
        $.ajax({
            url: "../Employees/GetStates",
            type: "GET",
            data: {
                country: $("#Country").val(),
            },
            success: function (result) {
                debugger;
                var array = JSON.parse(result);
                $("#State").empty();
                var html = "";
                $.each(array, function (index, row) {
                    html += "<option value='" + row.Value + "'>" + row.Text + "</option>";
                });
                $("#State").html(html);
            },
            error: function () {
                alert("error");
            }

        });


    })

    $("#State").change(function () {
        $.ajax({
            url: "../Employees/GetCities",
            type: "GET",
            data: {
                state: $("#State").val(),
            },
            success: function (result) {
                debugger;
                var array = JSON.parse(result);
                $("#City").empty();
                var html = "";
                $.each(array, function (index, row) {
                    html += "<option value='" + row.Value + "'>" + row.Text + "</option>";
                });
                $("#City").html(html);
            },
            error: function () {
                alert("error");
            }

        });


    })

    $(function () {
        LoadData();
    });

    $("#btnSave,#btnUpdate").click(function () {

        //var isValidate = $("#frmEmployee").bValidator();
        debugger;
        if (true) {
            var formdata = new FormData($("#frmEmployee")[0]);
            $("#wait").show();
            $.ajax({
                type: "POST",
                url: "../Employees/Create",
                processData: false,
                contentType: false,
                data: formdata,
                success: function (result) {
                    debugger;
                    // alert("Data has been added successfully.");
                    if (result == "AddSuccess") {
                        toastr.success("Data inserted successfully");
                    }
                    if (result == "UpdateSuccess") {
                        toastr.info("Data updated successfully");
                        $('#btnUpdate').hide();
                        $('#btnSave').show();
                        $('#EmployeeID').val("");

                    }
                    $("#wait").hide();
                    $('#frmEmployee')[0].reset();
                    LoadData();
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
        }
    });

    function LoadData() {
        $.ajax({
            type: 'GET',
            url: "../Employees/Index",
            success: function (data) {
                $("#getEmployees").html(data);
            },
            error: function (ex) {

            }
        });
    }

    $('#btnReset').click(function () {
        $('#frmEmployee')[0].reset();
    });

    function DeleteEmployee(id) {
        if (confirm("Are you sure do you want to delete?")) {
            // your deletion cod
            $("#wait").show();
            $.ajax({
                type: "POST",
                url: "../Employees/DeleteConfirmed",
                data: { id: id },
                success: function (result) {
                    if (result == "Success") {
                        toastr.error("Data deleted successfully");
                        $("#wait").hide();
                        LoadData();
                    }
                },
                error: function () {
                    alert("Error while deleting data");
                    $("#wait").hide();
                }
            });
        }

    }

    function GetEmployee(id) {
        $.ajax({
            type: "GET",
            url: "../Employees/GetEmployeeById",
            data: { id: id },
            success: function (result) {
                debugger;
                $('#FullName').val(result.FullName);
                $('#Country').val(result.Country);
                $('#State').val(result.State);
                $('#City').val(result.City);
                $('#EmployeeID').val(result.EmployeeID);
                $('#DOB').val(result.DOB);
                $('#btnUpdate').show();
                $('#btnSave').hide();
            },
            error: function () {
                alert("Data not found");
            }
        });
    }

